@model Thyme.Web.ViewModels.Front_vm
 
@{
    ViewBag.Title = "Random Blog - Benson Lott";  
}

<ul class="postList">
    @foreach (var item in Model.RecentBlogPosts){
    <li><span class="blogPostTitle">@Html.RouteLink(item.Title, "BlogPost", new { slug = item.UrlSlug })</span><br />
        <span class="blogPostPreview">@item.Intro</span><hr /></li>
    }
</ul>